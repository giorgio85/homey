<%# app/views/devise/sessions/new.html.erb %>

<%= turbo_stream_from "user_#{current_user.id}" if user_signed_in? %>

<div class="flex justify-center items-center min-h-screen bg-gray-100">
  <div class="w-full max-w-md p-8 space-y-6 bg-white shadow-md rounded-lg">
    <h2 class="text-center text-2xl font-bold text-gray-900">Log in to Your Account</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <% if resource.errors.any? %>
        <div class="mb-4 text-red-600">
          <ul>
            <% resource.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="space-y-4">
        <!-- Email Field -->
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email, autofocus: true, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <!-- Password Field -->
        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <!-- Remember Me Checkbox -->
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-500 focus:ring-blue-400 border-gray-300 rounded" %>
          <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900" %>
        </div>

        <!-- Submit Button -->
        <div>
          <%= f.submit "Log in", class: "w-full py-2 px-4 mt-4 bg-blue-500 text-white font-semibold rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
        </div>
      </div>
    <% end %>

    <div class="text-center">
      <p class="text-sm text-gray-600">Don't have an account? <a href="<%= new_user_registration_path %>" class="text-blue-500 hover:text-blue-600">Sign up</a></p>
    </div>
  </div>
</div>